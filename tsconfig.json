{
  "compilerOptions": {
    "target": "ES2017",
    "declaration": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outFile": "./dist/build.js",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
